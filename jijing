<script>
// 本地模拟提交（可以替换为真实 API）
const submitBtn = document.getElementById('submitBtn');
const successBox = document.getElementById('successBox');
submitBtn.addEventListener('click', ()=>{
const name = document.getElementById('name').value.trim();
const phone = document.getElementById('phone').value.trim();
if(!name || !phone){alert('请填写姓名和手机号/微信号');return}
const data = {
name, phone, region: document.getElementById('region').value.trim(),
scale: document.getElementById('scale').value.trim(),
resources: document.getElementById('resources').value.trim(),
isLeader: document.getElementById('isLeader').value
};
// 存到 localStorage（演示），真实使用请替换为 fetch POST 到你的后端
const key = 'ai_vc_apply_list_v1';
const list = JSON.parse(localStorage.getItem(key) || '[]');
list.push({...data, date:new Date().toLocaleString()});
localStorage.setItem(key, JSON.stringify(list));
successBox.style.display = 'block';
setTimeout(()=>{successBox.style.display='none';document.getElementById('applyForm').reset();},3000);
});


// 复制模板功能
document.querySelectorAll('.copy').forEach(btn=>{
btn.addEventListener('click', e=>{
const id = btn.getAttribute('data-tpl');
const tplNode = document.getElementById(id);
const text = tplNode.querySelector('.muted').innerText;
navigator.clipboard.writeText(text).then(()=>{
btn.textContent = '已复制';
setTimeout(()=>btn.textContent='复制模板',1500);
}).catch(()=>{alert('复制失败，请手动选择复制')});
});
});
</script>
